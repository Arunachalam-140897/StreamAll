# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_USER=
DB_PASS=
DB_NAME=streamcloud_db
DB_HOST=localhost
DB_PORT=27017
MONGODB_URI=mongodb://localhost:27017/streamcloud_db

# JWT Configuration
JWT_SECRET=streamcloud_secret
JWT_EXPIRES_IN=7d

# File Storage
MEDIA_PATH=./uploads/media
BACKUP_PATH=./backups
VAULT_PATH=./uploads/vault
VAULT_SECRET=streamcloud_vault_secret
MAX_FILE_SIZE=2147483648

# Download Service
ARIA2_HOST=localhost
ARIA2_PORT=6800
ARIA2_SECRET=streamcloud_aria2_secret

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=streamcloud_redis_secret
REDIS_DB=0

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

#admin credentials
ADMIN_USERNAME=admin
ADMIN_INITIAL_PASSWORD=admin123